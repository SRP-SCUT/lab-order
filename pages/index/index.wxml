<!--index.wxml-->
<view class='index'>
<view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class="kind-list-item">
          <navigator url='pages/{{item.id}}/{{item.id}}' id="{{item.id}}" class="kind-list-item-hd">
            <view class="kind-list-text">{{item.name}}</view>
            <image class="kind-list-img" src="imgs/{{item.id}}.png"></image>
          </navigator>
        </view>
      </block>
    </view>
  </view>
</view>